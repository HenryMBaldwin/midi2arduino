{
    "version": 2,
    "builds": [
      {
        "src": "src/**/*",
        "use": "@sveltejs/adapter-vercel"
      },
      {
        "src": "api/**/*.py",
        "use": "@vercel/python"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/api/$1"
      },
      {
        "src": "/(.*)",
        "dest": "/src/$1"
      }
    ]
  }
  